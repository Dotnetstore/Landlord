@page "/Organization/Offices/"
@model Dotnetstore.LandLord.WebUI.Pages.Organization.Offices.List

@{
    ViewData["Title"] = "Offices";
}

<h1>Offices</h1>

<a class="btn btn-success mb-3" asp-page="/Organization/Offices/Create">
    <i class="bi bi-plus"></i> Add New
</a>

@if (Model.Offices.Any())
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Corporate ID</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var office in Model.Offices)
        {
            <tr>
                <td>@office.Name</td>
                <td>@office.CorporateId</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-page="/Organization/Offices/Edit" asp-route-id="@office.Id">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <form type="submit" asp-page-handler="Delete" asp-route-id="@office.Id" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this office?');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No offices found.</p>
}